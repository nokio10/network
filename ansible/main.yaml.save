- hosts: inetRouter
  become: true
  tasks:
  - name: install iptables
    yum:
      name:
      - iptables
      - iptables-services
      state: present
      update_cache: true

  - name: copy iptables config
    template:
      src: iptables
      dest: /etc/sysconfig/iptables
      owner: root
      group: root
      mode: 0600

  - name: start and enable iptables service
    service:
      name: iptables
      state: restarted
      enabled: true

- hosts: inetRouter, centralRouter, office1Router, office2Router
  become: true
  tasks:
  - name: set up forward packages across routers
    sysctl:
      name: net.ipv4.conf.all.forwarding
      value: '1'
      state: present

- hosts: centralRouter, centralServer
  become: true
  tasks:
  - name: Set DEFROUTE
    lineinfile:
      dest: /etc/sysconfig/network-scripts/ifcfg-eth0
      regexp: '.*DEFROUTE.*'
      line: 'DEFROUTE=no'
      state: present  

- hosts: centralRouter
  become: true
  tasks:
  - name: add default gateway for centralRouter
    lineinfile:
      dest: /etc/sysconfig/network-scripts/ifcfg-eth1
      line: GATEWAY=192.168.255.1

  - name: restart network
    systemd:
      name: network
      enabled: yes
      state: restarted  

- hosts: centralServer
  become: true
  tasks:
  - name: add default gateway for centralServer
    lineinfile:
      dest: /etc/sysconfig/network-scripts/ifcfg-eth1
      line: GATEWAY=192.168.0.1

  - name: restart network
    systemd:
      name: network
      enabled: yes
      state: restarted  
      

- hosts: centralRouter, centralServer
  become: true
  tasks:
  - name: set up route on office1Server
    template:
      src: office1Server_route.j2
provision      dest: /etc/netplan/50-vagrant.yaml
      owner: root
      group: root
      mode: 0644


- hosts: office2Server
  become: true
  tasks:
  - name: set up route on office2Server
    template:
      src: office2Server_route.j2
      dest: /etc/network/interfaces
      owner: root
      group: root
      mode: 0644


- hosts: centralRouter
  become: true
  tasks:
  - name: set up route on centralRouter eth1
    template:
      src: centralRouter_route_eth1.j2
      dest: /etc/sysconfig/network-scripts/route-eth1
      owner: root
      group: root
      mode: 0644

  - name: set up route on centralRouter eth1
    template:
      src: centralRouter_route_eth5.j2
      dest: /etc/sysconfig/network-scripts/route-eth5
      owner: root
      group: root
      mode: 0644
